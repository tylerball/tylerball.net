<article class="lh-copy mv4">
  <%= partial :article_meta, locals: { article: article } %>
  <%= article_title(article) %>
  <% if article.data.short %>
    <%= article.body %>
  <% else %>
    <%= article.summary %>
    <% if article.body.size > article.summary.size %>
      <%= link_to 'read more ->', article.url %>
    <% end %>
  <% end %>
</article>
