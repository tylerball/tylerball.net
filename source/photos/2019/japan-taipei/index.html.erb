    <div class="pv2 pa2-ns">
      <%= image_tag '044-taipei.jpg', alt: 'On the street in Taipei.' %>
    </div>
    <div class="pv2 pa2-ns">
      <%= image_tag '039-taipei.jpg', alt: '7-Eleven and exercise.' %>
