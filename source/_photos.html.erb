<h2>photos</h2>

<div class="album-list">
  <% articles.group_by { |a| a.date.year }.each do |year, articles| %>
    <div class="album">
      <% link_to "/photos/#{year}" do %>
        <%= image_tag articles.first.data[:thumb],
          alt: "photos from #{year}"
        %>
      <% end %>
      <%= link_to year, blog_year_path(year), class: 'mv2' %>
    </div>
  <% end %>
</div>
