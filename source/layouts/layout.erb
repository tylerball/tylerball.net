<!doctype html>
<html>
  <head>
    <meta charset="utf-8">
    <meta content="IE=edge,chrome=1" http-equiv="X-UA-Compatible">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <title><%= current_page.data.title ? "#{current_page.data.title} - tylerball.net" : "tylerball.net" %></title>

    <link href='http://fonts.googleapis.com/css?family=PT+Mono' rel='stylesheet' type='text/css'>
    <%= stylesheet_inline_tag "normalize" %>
    <%= stylesheet_inline_tag "all" %>
    <%= yield_content :extra_css %>
  </head>

  <body class="<%= page_classes %> <%= yield_content :page_classes %>">
    <header>
      <h1 class="site-title"><a href="/">tylerball.net</a> <%= current_page.url %></h1>
    </header>
    <nav>
      <ul>
      <% data.navigation.each do |item| %>
        <% if current_page.path == File.basename(item.href) %>
          <li><%= item.name %></li>
        <% else %>
          <li><%= link_to item.name, item.href %></li>
        <% end %>
      <% end %>
      </ul>
    </nav>
    <main role="main">
      <%= yield %>
    <main>
    <script>
      (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
        (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
          m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
      })(window,document,'script','//www.google-analytics.com/analytics.js','ga');

      ga('create', 'UA-6049484-1', 'auto');
      ga('send', 'pageview');

    </script>
  </body>
</html>
