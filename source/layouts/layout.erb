<!doctype html>
<html class="<%= page_classes %>">
  <head>
    <meta charset="utf-8">
    <meta content="IE=edge,chrome=1" http-equiv="X-UA-Compatible">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <title><%= current_page.data.title ? "#{current_page.data.title} - tylerball.net" : "tylerball.net" %></title>
    <link rel="shortcut icon" type="image/x-icon" href="/favicon.ico"/>

    <link href='http://fonts.googleapis.com/css?family=Lato|PT+Mono' rel='stylesheet' type='text/css'>
    <%= stylesheet_link_tag webpack_asset_path 'site.css' %>
    <%= feed_tag :atom, "/feed.xml", title: "Atom Feed" %>
  </head>

  <body class="sans-serif <%= yield_content :page_classes %>"<%= yield_content :body_attrs %>>
    <header class="mv2">
      <h1 class="f5"><a href="/">tylerball.net</a> <%= current_page.url %></h1>
    </header>
    <nav class="mb4">
      <ul class="list pa0">
      <% data.navigation.each do |item| %>
        <% if File.basename(current_page.path, File.extname(current_page.path)) == File.basename(item.href) %>
          <li class="dib"><%= item.name %></li>
        <% else %>
          <li class="dib"><%= link_to item.name, item.href %></li>
        <% end %>
      <% end %>
      </ul>
    </nav>
    <main role="main" class="relative">
      <%= yield %>
    </main>
    <%= javascript_include_tag webpack_asset_path 'site.js' %>
    <script>
      (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
        (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
          m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
      })(window,document,'script','//www.google-analytics.com/analytics.js','ga');

      ga('create', 'UA-6049484-1', 'auto');
      ga('send', 'pageview');

    </script>
  </body>
</html>
