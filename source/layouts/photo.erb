<% content_for :page_classes, 'photo-post' %>
<% wrap_layout :layout do %>
  <figure class="mh0">
    <%= image_tag current_page.data[:photo], alt: current_page.title %>
    <figcaption class="mv2"><%= current_page.title %></figcaption>
  </figure>

  <article>
    <%= yield %>
  </article>

  <p class="mt5 f6 tc">
    <%= link_to "#{current_page.date.year} photos", "/photos/#{current_page.date.year}" %>
  </p>
<% end %>
